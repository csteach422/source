<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.notetaker" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NoteTaker</name>
    <description>
        take notes...save locally
    </description>
    <author email="csteach@gmail.com" href="http://csteach422.github.io">
        csteach
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-minSdkVersion" value="21" />
    <preference name="StatusBarBackgroundColor" value="#1a3852" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
    <engine name="android" spec="~6.0.0" />
</widget>
